<% title "Login" %>

<%= bootstrap_form_tag url: sessions_path, method: :post do |f| %>
	<%= f.email_field :email %>
	<%= f.password_field :password %>
	<p><%= link_to "Forgot Password?", new_password_reset_path %></p>
	<%= f.form_group do %>
		<%= f.check_box :remember, label: "Keep me logged in"%>
	<% end %>
	<%= f.primary "Login" %>
<% end %>

<p>No account? <%= link_to "Sign Up", sign_up_path %>!
