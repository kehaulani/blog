<div class= "wrapper">
    <div class= "content">

        <%= render @post %>

        <%= link_to "Edit Post", edit_post_path(@post), class: "btn btn-primary"%>
        <%= link_to "Delete Post", post_path(@post), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %><br>


        <h3>Comments</h3>


        <%= render @post.comments %>

        <%= render 'comments/form'%>

        <%= link_to "All Posts", posts_path %>
    </div>

</div>
